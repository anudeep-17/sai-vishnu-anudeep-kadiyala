import java.util.Random;   // Needed for the Random class
/**
   This class simulates rolling a pair of dice 10,000 times
   and counts the number of times doubles of are rolled for
   each different pair of doubles.
*/

public class DiceSimulationFORLOOP
{
   public static void main(String[] args)
   { 
      final int NUMBER = 10000;  // Number of dice rolls 

      // A random number generator used in
      // simulating the rolling of dice
      Random generator = new Random();//generator obj is ceated in random class

      int die1Value;       // Value of the first die
      int die2Value;       // Value of the second die
      int count = 0;       // Total number of dice rolls
      int snakeEyes = 0;   // Number of snake eyes rolls
      int twos = 0;        // Number of double two rolls
      int threes = 0;      // Number of double three rolls
      int fours = 0;       // Number of double four rolls
      int fives = 0;       // Number of double five rolls
      int sixes = 0;       // Number of double six rolls
      int i = 0;
      // TASK #1 Enter your code for the algorithm here

  for(count = 0 ; count < NUMBER ; count++)//for loop is used with count as variable compared to number which is 10000 and incremented 
{

   die1Value = generator.nextInt(6) + 1;//generates random number in the name of dice 1 greater than 0 since 1 us added

   die2Value = generator.nextInt(6) + 1;//generates random number in the name of dice 1 greater than 0 since 1 us added

     
      if (die1Value == 1 && die2Value == 1)//if condition for the number for the same values in die 1 and die 2
      { 
           //snakeEyes = snakeEyes + 1;    
           snakeEyes++;//it is incremented if the die 1 and 2 value is 1 every time in 10,000 rolls
          
       }
       else if (die1Value == 2 && die2Value == 2 )//if condition for the number for the same values in die 1 and die 2 
       {
            twos++;//it is incremented if the die 1 and 2 value is 2 every time in 10,000 rolls
    
       }
       else if (die1Value == 3 && die2Value == 3) //if condition for the number for the same values in die 1 and die 2
       {
            threes++;//it is incremented if the die 1 and 2 value is 3 every time in 10,000 rolls
       }      
       else if (die1Value == 4 && die2Value == 4)//if condition for the number for the same values in die 1 and die 2 
       {
            fours++;//it is incremented if the die 1 and 2 value is 4 every time in 10,000 rolls
       }
       else if (die1Value == 5 && die2Value == 5)//if condition for the number for the same values in die 1 and die 2 
       {
            fives++;  //it is incremented if the die 1 and 2 value is 5 every time in 10,000 rolls
             
       }
       else if (die1Value == 6 && die2Value == 6)//if condition for the number for the same values in die 1 and die 2 
       { 
            sixes++;//it is incremented if the die 1 and 2 value is 6 every time in 10,000 rolls
            
       }
           
 }
 System.out.println ("You rolled snake eyes " +
                          snakeEyes + " out of " +
                          count + " rolls.");//prints the number of time the two values are 1 out of number of rolls
      System.out.println ("You rolled double twos " +
                          twos + " out of " + count +
                          " rolls.");//prints the number of time the two values are 2 out of number of rolls
      System.out.println ("You rolled double threes " +
                          threes + " out of " + count +
                          " rolls.");//prints the number of time the two values are 3 out of number of rolls
      System.out.println ("You rolled double fours " +
                          fours + " out of " + count + 
                          " rolls.");//prints the number of time the two values are 4 out of number of rolls
      System.out.println ("You rolled double fives " +
                          fives + " out of " + count +
                          " rolls.");//prints the number of time the two values are 5 out of number of rolls
      System.out.println ("You rolled double sixes " +
                          sixes + " out of " + count +
                          " rolls.");//prints the number of time the two values are 6 out of number of rolls
   }
}
       
