
/**
  DESCRIPTION : This program used to take first and last name as input and give concatenated full name as output using JOptionPane
*/
import javax.swing.*;//import statement for joptionpane 
import java.util.Scanner;  // Needed for the Scanner class
public class alternatenumerictypes
{
  public static void main (String [] args)
  {
     // Create a Scanner object to read from the keyboard.
      Scanner keyboard = new Scanner(System.in); // TASK #2 Create a Scanner object here
      // (not used for alternate)

      // Identifier declarations
      final double NUMBER = 2 ;        // Number of scores
      final double SCORE1 = 100;       // First test score
      final double SCORE2 = 95;        // Second test score
      final double BOILING_IN_F = 212; // Boiling temperature
      double fToC;                     // Temperature Celsius
      double average;               // Arithmetic average
      String output;                // Line of output

     String firstname;//this takes input of the users first name 
     String lastname;//this takes input of users lastname
     String fullname;//this takes stores the output concatinating the first and last name // TASK #2 declare variables used here
     char FirstInitial;//this is used to store the first charected of full name entered // TASK #3 declare variables used here
     double diameter ;//this takes the input value entered by user
      double radius ;//this is used to store the half value of diameter entered
      double volume ;//this is used to store the calculated value // TASK #4 declare variables used here

      // Find an arithmetic average.
      average = (SCORE1 + SCORE2) / NUMBER; 
      output = SCORE1 + " and " + SCORE2 +
               " have an average of " + average;
      System.out.println(output);

      // Convert Fahrenheit temperature to Celsius.
      fToC = (5 * (BOILING_IN_F - 32))/9;
      output = BOILING_IN_F + " in Fahrenheit is " +
               fToC + " in Celsius.";
      System.out.println(output);
      
      System.out.println(); // To leave a blank line

      // ADD LINES FOR TASK #2B HERE
      firstname = JOptionPane.showInputDialog("please enter yout first name");//to get the input of first name from the user 
      lastname = JOptionPane.showInputDialog("please enter yout last name");//to get input of last name from usere 
      fullname = firstname + " " + lastname;//this will concatenation first name and last name  
      JOptionPane.showMessageDialog(null," your full name is " + fullname );//this will print output of full name 

      
      System.out.println();      // To leave a blank line

      // ADD LINES FOR TASK #3 HERE       
      FirstInitial = firstname.charAt(0);// where 0 specifies first index in java// Get the first character from the user's first name
      System.out.println("first letter of your full name is " + FirstInitial);// Print out the user's first initial
      fullname = fullname.toUpperCase(); // Convert the user's full name to uppercase
      System.out.println("your full name in upper case is  " + fullname );
      System.out.println("length of your full name is  " + fullname.length());// Print out the user's full name in uppercase

      System.out.println();      // To leave a blank line

      // ADD LINES FOR TASK #4 HERE
      System.out.println("please enter value of diameter ");// Prompt the user for a diameter of a sphere
      diameter = Double.parseDouble(keyboard.nextLine());// Read the diameter
      radius = (diameter/2);//since radius is half of diameter // Calculate the radius
      volume = (4 *(Math.PI * Math.pow(radius , 3)))/3;//using mathemetical formula of volume of sphere considering operator presedence // Calculate the volume
      System.out.println(" the volume of sphere for given diameter " + diameter + " is " + volume );// Print out the volume
   
   }
}
   
